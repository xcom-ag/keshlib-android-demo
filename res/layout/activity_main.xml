<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.xcom.keshlib.keshlibandroiddemo.MainActivity" >
	
    <View
        android:id="@+id/connection_indicator"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FF0000" />
    
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <requestFocus />
        </View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/connect_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:lines="1"
                    android:onClick="connectButtonClicked"
                    android:singleLine="true"
                    android:text="Connect"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <Button
                    android:id="@+id/disconnect_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="disconnectButtonClicked"
                    android:singleLine="true"
                    android:text="Disconnect"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true" >

                    <requestFocus />
                </View>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="loginButtonClicked"
                    android:singleLine="true"
                    android:text="Login"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="logoutButtonClicked"
                    android:singleLine="true"
                    android:text="Logout"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <Button
                    android:id="@+id/userdata_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="userdataButtonClicked"
                    android:singleLine="true"
                    android:text="Userdata"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/send_money_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="sendMoneyButtonClicked"
                    android:singleLine="true"
                    android:text="Send Money"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <Button
                    android:id="@+id/request_money_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="requestMoneyButtonClicked"
                    android:singleLine="true"
                    android:text="Request Money"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <Button
                    android:id="@+id/balance_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="balanceButtonClicked"
                    android:singleLine="true"
                    android:text="Balance"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/charge_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="chargeButtonClicked"
                    android:singleLine="true"
                    android:text="Charge"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <Button
                    android:id="@+id/discharge_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="dischargeButtonClicked"
                    android:singleLine="true"
                    android:text="Discharge"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <Button
                    android:id="@+id/transactions_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="transactionsButtonClicked"
                    android:singleLine="true"
                    android:text="Transactions"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/fetch_mandate_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="fetchMandateButtonClicked"
                    android:singleLine="true"
                    android:text="SEPA show"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <Button
                    android:id="@+id/fetch_preview_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="fetchPreviewButtonClicked"
                    android:singleLine="true"
                    android:text="SEPA preview"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <Button
                    android:id="@+id/create_mandate_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="createMandateButtonClicked"
                    android:singleLine="true"
                    android:text="SEPA create"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/avatar_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="avatarButtonClicked"
                    android:singleLine="true"
                    android:text="Avatar"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <EditText
                    android:id="@+id/image_id_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="ID"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <Button
                    android:id="@+id/save_avatar_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="saveAvatarButtonClicked"
                    android:singleLine="true"
                    android:text="Save Avatar"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/change_password_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="changePasswordButtonClicked"
                    android:singleLine="true"
                    android:text="Change PW"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <EditText
                    android:id="@+id/old_pw_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="old"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <EditText
                    android:id="@+id/new_pw_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="new"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/confirm_cent_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="confirmCentButtonClicked"
                    android:singleLine="true"
                    android:text="Confirm Cent"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <Button
                    android:id="@+id/register_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="registerButtonClicked"
                    android:singleLine="true"
                    android:text="Register"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />

                <Button
                    android:id="@+id/upgrade_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:onClick="upgradeButtonClicked"
                    android:singleLine="true"
                    android:text="Upgrade"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse" />
            </LinearLayout>

            <TextView
                android:id="@+id/output_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minLines="10"
                android:textAppearance="?android:attr/textAppearanceSmallInverse" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>